<?xml version="1.0" encoding="UTF-8"?>
<form
    addrulepath="/administrator/components/com_sportsmanagement/models/rules"
    addfieldpath="/administrator/components/com_sportsmanagement/models/fields">
    
    <fieldset 
        name="details"
        label="COM_SPORTSMANAGEMENT_TABS_DETAILS"
        description="COM_SPORTSMANAGEMENT_TABS_DETAILS_DESC"
    >
	
        <field
            name="id" 
            type="number" 
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC" 
            class="readonly" 
            size="11" 
            default="0"
            readonly="true"
        />
		
        <field
            name="name"
            type="text"
            label="COM_SPORTSMANAGEMENT_GLOBAL_NAME"
            description="COM_SPORTSMANAGEMENT_GLOBAL_NAME_DESC"
            class="inputbox"
            required="true"
        />
			
        <field
            name="name_long"
            type="text"
            label="JFIELD_ALIAS_LABEL"
            description="JFIELD_ALIAS_DESC"
            class="inputbox"
        />		

        <field
            name="country"
            type="country"
            label="COM_SPORTSMANAGEMENT_ADMIN_AGEGROUP_COUNTRY"
            description="COM_SPORTSMANAGEMENT_ADMIN_AGEGROUP_COUNTRY_DESC"
            class="inputbox"
            required="true">
            <option value="">COM_SPORTSMANAGEMENT_GLOBAL_SELECT_COUNTRY</option>
        </field>
	         		
        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            description="JGLOBAL_FIELD_MODIFIED_LABEL"
            class="readonly"
            size="22"
            readonly="true"
            format="%Y-%m-%d %H:%M:%S"
            filter="user_utc"
        />

        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            description="JGLOBAL_FIELD_MODIFIED_BY_DESC"
            class="readonly"
            readonly="true"
            filter="unset"
        />
    
        <field
            name="checked_out_time"
            type="calendar"
            label="JLIB_HTML_CHECKED_OUT"
            description="JLIB_HTML_CHECKED_OUT"
            class="readonly"
            size="22"
            readonly="true"
            format="%Y-%m-%d %H:%M:%S"
            filter="user_utc"
        />

        <field
            name="checked_out"
            type="user"
            label="JGLOBAL_USERNAME"
            description="JGLOBAL_USERNAME"
            class="readonly"
            readonly="true"
            filter="unset"
        />
              	
    </fieldset>			
	
</form>
