<?xml version="1.0" encoding="UTF-8"?>
<form addrulepath="/administrator/components/com_sportsmanagement/models/rules"
	addfieldpath="/administrator/components/com_sportsmanagement/models/fields">
	<fieldset name="details"
    label="COM_SPORTSMANAGEMENT_TABS_DETAILS"
  description="COM_SPORTSMANAGEMENT_TABS_DETAILS_DESC">
	<field
			name="id" 
			type="number" 
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" 
			class="readonly" 
			size="11" 
			default="0"
			readonly="true"
		/>
	
		<field
			name="name"
			type="text"
			label="COM_SPORTSMANAGEMENT_GLOBAL_NAME"
			description="COM_SPORTSMANAGEMENT_GLOBAL_NAME_DESC"
			class="inputbox"
			required="true"/>
		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"/>		
			
			
<field
			name="auto_approve"
			type="extensionradiobutton"
			default="0"
			class="radio btn-group btn-group-yesno"
			label="COM_SPORTSMANAGEMENT_ADMIN_PGAME_AUTO_APPROVE"
			description="COM_SPORTSMANAGEMENT_ADMIN_PGAME_AUTO_APPROVE_DESC">
		<option value="0">JNO</option>
		<option value="1">JYES</option>
		</field>
<field
			name="only_favteams"
			type="extensionradiobutton"
			default="0"
			class="radio btn-group btn-group-yesno"
			label="COM_SPORTSMANAGEMENT_ADMIN_PGAME_ONLY_FAVTEAMS"
			description="COM_SPORTSMANAGEMENT_ADMIN_PGAME_ONLY_FAVTEAMS_DESC">
		<option value="0">JNO</option>
		<option value="1">JYES</option>
		</field>
<field
			name="admin_tipp"
			type="extensionradiobutton"
			default="0"
			class="radio btn-group btn-group-yesno"
			label="COM_SPORTSMANAGEMENT_ADMIN_PGAME_ADMIN_TIPP"
			description="COM_SPORTSMANAGEMENT_ADMIN_PGAME_ADMIN_TIPP_DESC">
		<option value="0">JNO</option>
		<option value="1">JYES</option>
		</field>        			
			
<field
			name="user_ids"
			type="userlist"
			label="COM_SPORTSMANAGEMENT_ADMIN_PGAME_USER_IDS"
			description="COM_SPORTSMANAGEMENT_ADMIN_PGAME_USER_IDS_DESC"
			multiple="true"
			size="15"
			class="inputbox">
      <option
				value="">
				COM_SPORTSMANAGEMENT_GLOBAL_SELECT_DO_NOT_USE</option>
		</field>	
		
		
<field
            name="season"
            type="seasonlist"
            label="COM_SPORTSMANAGEMENT_ADMIN_PROJECTS_SEASON_FILTER"
            description="COM_SPORTSMANAGEMENT_ADMIN_PROJECTS_SEASON_FILTER"
            required="false"
        >
            <option value="">COM_SPORTSMANAGEMENT_ADMIN_PROJECTS_SEASON_FILTER</option>
        </field>		
		
		
<field
			name="project_ids"
			type="projectlist"
			label="COM_SPORTSMANAGEMENT_ADMIN_PGAME_PROJECT_IDS"
			description="COM_SPORTSMANAGEMENT_ADMIN_PGAME_PROJECT_IDS_DESC"
			multiple="true"
			size="15"
			class="inputbox">
      <option
				value="">
				COM_SPORTSMANAGEMENT_GLOBAL_SELECT_DO_NOT_USE</option>
		</field>	    			
			
			
	</fieldset>				
</form>