			type="timezone"
			label="COM_SPORTSMANAGEMENT_ADMIN_PROJECT_TIMEZONE"
			description="COM_SPORTSMANAGEMENT_ADMIN_PROJECT_TIMEZONE_DESC"
			class="inputbox"
			default="Europe/Amsterdam"/>		
