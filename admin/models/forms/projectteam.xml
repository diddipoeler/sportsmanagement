      <field
				name="trikot_home"
				type="media"
				default="" 
				label="COM_SPORTSMANAGEMENT_ADMIN_TEAM_TRIKOT_HOME"
				description="COM_SPORTSMANAGEMENT_ADMIN_TEAM_TRIKOT_HOME_DESC"
				class="inputbox"
				preview="show"
				directory=""/>				
			<field
				name="trikot_away"
				type="media"
