			name="penalty_points"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_PENALTY_POINTS"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_PENALTY_POINTS_DESC"
			class="inputbox validate-numeric"/>	  	
		<field
			name="won_finally"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_WON"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_WON_DESC"
			class="inputbox validate-numeric"/>	
		<field
			name="draws_finally"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_DRAW"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_DRAW_DESC"
			class="inputbox validate-numeric"/>	
		<field
			name="lost_finally"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_LOST"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_LOST_DESC"
			class="inputbox validate-numeric"/>	
		<field
			name="homegoals_finally"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_HG"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_HG_DESC"
			class="inputbox validate-numeric"/>	
		<field
			name="guestgoals_finally"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_GG"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_GG_DESC"
			class="inputbox validate-numeric"/>	
		<field
			name="diffgoals_finally"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_DG"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_DG_DESC"
			class="inputbox validate-numeric"/>					
	</fieldset>
  
	
