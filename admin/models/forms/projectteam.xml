				label="COM_SPORTSMANAGEMENT_ADMIN_TEAM_TRIKOT_AWAY"
				description="COM_SPORTSMANAGEMENT_ADMIN_TEAM_TRIKOT_AWAY_DESC"
				class="inputbox"
				preview="show"
				directory=""/>
        
