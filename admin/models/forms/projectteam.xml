			name="team_id"
			type="number"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAMID_ADMIN"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAMID_ADMIN_DESC" 
			class="readonly" 
			size="11" 
			default="0"
			readonly="true"
		/>
		<field
			name="admin"
			type="user"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_ADMIN"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_ADMIN_DESC"
			class="inputbox"/>
	<field
			name="standard_playground"
			type="playgroundlist"
			class="inputbox"
			default="0"
			size="1"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_VENUE"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_VENUE_DESC"
			>
			<option
				value="0">
				COM_SPORTSMANAGEMENT_GLOBAL_SELECT_PLAYGROUND</option>
		</field>			
		<field
			name="is_in_score"
			type="extensionradiobutton"
			default="1"
			class="radio btn-group btn-group-yesno"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_INSCORE"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_INSCORE_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="start_points"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_INIT_POINTS"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_INIT_POINTS_DESC"
			class="inputbox validate-numeric"/>		
		<field
			name="reason"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_REASON_INIT_POINTS"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_REASON_INIT_POINTS_DESC"
			class="inputbox"/>	
		<field
			name="use_finally"
			type="extensionradiobutton"
			default="0"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_USE_FINALLY"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_USE_FINALLY_DESC"
			class="radio btn-group btn-group-yesno">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="matches_finally"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_MATCH"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_MATCH_DESC"
			class="inputbox validate-numeric"/>				
		<field
			name="points_finally"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_POINTS"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_POINTS_DESC"
			class="inputbox validate-numeric"/>	
		<field
			name="neg_points_finally"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_NEG_POINTS"
			description="COM_SPORTSMANAGEMENT_ADMIN_P_TEAM_TOT_NEG_POINTS_DESC"
			class="inputbox validate-numeric"/>
