			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
		</field>
    
<field
			name="catid"
			type="category"
			extension="com_sportsmanagement"
			class="inputbox"
			default=""
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
			required="false"
