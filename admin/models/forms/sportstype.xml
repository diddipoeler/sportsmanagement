<?xml version="1.0" encoding="UTF-8"?>
<form
	addrulepath="/administrator/components/com_sportsmanagement/models/rules"
	addfieldpath="/administrator/components/com_sportsmanagement/models/fields">

	<fieldset name="details">
	<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_SPORTSMANAGEMENT_GLOBAL_NAME"
			description="COM_SPORTSMANAGEMENT_GLOBAL_NAME_DESC"
			class="inputbox"
			required="true"/>
  <field
				name="sportsart"
				type="radio"
				default="1"
				label="COM_SPORTSMANAGEMENT_ADMIN_SPORTSART"
				description="COM_SPORTSMANAGEMENT_ADMIN_SPORTSART_DESC">
			<option value="0">COM_SPORTSMANAGEMENT_ADMIN_SPORTSART_TEAM</option>	
			<option value="1">COM_SPORTSMANAGEMENT_ADMIN_SPORTSART_SINGLE</option>	
			</field>
	</fieldset>			

	<fieldset name="picture">			
		<field 	
			name="icon" 
			type="media" 
			default="com_sportsmanagement/database/placeholders/placeholder_21.png"				
			label="COM_SPORTSMANAGEMENT_GLOBAL_ICON" 
			description="COM_SPORTSMANAGEMENT_GLOBAL_ICON_DESC"
			class="inputbox"
			directory="com_sportsmanagement/database/sport_types"
			preview="show"
			>
		</field>
	</fieldset>
  
  <fieldset name="imageselect">			
		<field 	
			name="icon" 
			type="imageselect" 
			default="com_sportsmanagement/database/placeholders/placeholder_21.png"				
			label="COM_SPORTSMANAGEMENT_GLOBAL_ICON" 
			description="COM_SPORTSMANAGEMENT_GLOBAL_ICON_DESC"
			class="inputbox"
			directory="com_sportsmanagement/database/sport_types"
			targetfolder="sport_types"
			preview="show"
			>
		</field>
	</fieldset>
  
  <fields name="extended">
		<fieldset
			name="extended"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
		
		</fieldset>
	</fields>	
  
  			
</form>