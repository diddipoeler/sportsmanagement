<?xml version="1.0" encoding="UTF-8"?>
<form
	addrulepath="/administrator/components/com_sportsmanagement/models/rules"
	addfieldpath="/administrator/components/com_sportsmanagement/models/fields">

	<fieldset name="details"
  label="COM_SPORTSMANAGEMENT_TABS_DETAILS"
  description="COM_SPORTSMANAGEMENT_TABS_DETAILS_DESC">
	<field
			name="id" 
			type="number" 
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" 
			class="readonly" 
			size="11" 
			default="0"
			readonly="true"
		/>
		<field
			name="name"
			type="text"
			label="COM_SPORTSMANAGEMENT_GLOBAL_NAME"
			description="COM_SPORTSMANAGEMENT_GLOBAL_NAME_DESC"
			class="inputbox"
			required="true"/>
  <field
				name="sportsart"
				type="extensionradiobutton"
				default="0"
        class="radio btn-group btn-group-yesno"
				label="COM_SPORTSMANAGEMENT_ADMIN_SPORTSART"
				description="COM_SPORTSMANAGEMENT_ADMIN_SPORTSART_DESC">
			<option value="0">COM_SPORTSMANAGEMENT_ADMIN_SPORTSART_TEAM</option>	
			<option value="1">COM_SPORTSMANAGEMENT_ADMIN_SPORTSART_SINGLE</option>	
			</field>
			
			<field name="eventtime" type="extensionradiobutton" default="1"  class="radio btn-group btn-group-yesno"
			label="COM_SPORTSMANAGEMENT_ADMIN_SPORTSART_USE_EVENTTIME"
			description="COM_SPORTSMANAGEMENT_ADMIN_SPORTSART_USE_EVENTTIME_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
</field>
			
			
	</fieldset>			

	<fieldset name="picture"
  label="COM_SPORTSMANAGEMENT_TABS_PICTURE"
  description="COM_SPORTSMANAGEMENT_TABS_PICTURE_DESC">			
<field 	
name="icon" 
type="media" 
default="images/com_sportsmanagement/database/sport_types/placeholder_21.png"				
label="COM_SPORTSMANAGEMENT_GLOBAL_ICON" 
description="COM_SPORTSMANAGEMENT_GLOBAL_ICON_DESC"
class="inputbox"
directory="images/com_sportsmanagement/database/sport_types"
preview="show"
showon="show_info:1[AND]show_image:1"
targetfolder="sport_types"
>
</field>
		
	</fieldset>
 			
</form>