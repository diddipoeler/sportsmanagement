<?xml version="1.0" encoding="UTF-8"?>
<form addrulepath="/administrator/components/com_sportsmanagement/models/rules"
	addfieldpath="/administrator/components/com_sportsmanagement/models/fields">
	<fieldset name="details"
  label="COM_SPORTSMANAGEMENT_TABS_DETAILS"
  description="COM_SPORTSMANAGEMENT_TABS_DETAILS_DESC">
	<field
			name="id" 
			type="number" 
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" 
			class="readonly" 
			size="11" 
			default="0"
			readonly="true"
		/>
		<field
			name="name"
			type="text"
			label="COM_SPORTSMANAGEMENT_GLOBAL_NAME"
			description="COM_SPORTSMANAGEMENT_GLOBAL_NAME_DESC"
			class="inputbox"
			required="true"/>
			
		<field
			name="short"
			type="text"
			size="10"
			maxlength="6"
			label="COM_SPORTSMANAGEMENT_ADMIN_STAT_ABBREV"
			description="COM_SPORTSMANAGEMENT_ADMIN_STAT_ABBREV_DESC"
			class="inputbox"
			required="true"/>
			
		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"/>			
		
		<field
			name="sports_type_id"
			type="sportstypelist"
			class="inputbox"
			default="0"
			size="1"
			label="COM_SPORTSMANAGEMENT_GLOBAL_SPORT_TYPE"
			description="COM_SPORTSMANAGEMENT_GLOBAL_SPORT_TYPE_DESC"
			
			required="true">
			<option
				value="">
				COM_SPORTSMANAGEMENT_GLOBAL_SELECT_SPORTSTYPE</option>
		</field>
		
		<field
			name="class"
			type="statstypelist"
			default="basic"
			class="inputbox"
			size="10"
			label="COM_SPORTSMANAGEMENT_ADMIN_STAT_TYPE"
			description="COM_SPORTSMANAGEMENT_ADMIN_STAT_TYPE_DESC"
			required="true">
		</field>
		
		<field
			name="note"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_STAT_NOTE"
			description="COM_SPORTSMANAGEMENT_ADMIN_STAT_NOTE_DESC"
			class="inputbox"
			maxlength="100"
			required="false"/>		
		
		<field
			name="published"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
		</field>


	</fieldset>	


  <fieldset name="picture"
  label="COM_SPORTSMANAGEMENT_TABS_PICTURE"
  description="COM_SPORTSMANAGEMENT_TABS_PICTURE_DESC">
			<field
				name="icon"
				type="media"
				default=""				
				label="COM_SPORTSMANAGEMENT_GLOBAL_ICON"
				description="COM_SPORTSMANAGEMENT_GLOBAL_ICON_DESC"
				class="inputbox"
				preview="show"
				targetfolder="statistics"
				directory="">	
        </field>		
	</fieldset>	


	
	<fieldset
			name="params"
			label="COM_SPORTSMANAGEMENT_TABS_PARAMS"
			description="COM_SPORTSMANAGEMENT_TABS_PARAMS_DESC"
		>
		
		</fieldset>

		
