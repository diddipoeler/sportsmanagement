						task="matchesoptions" 
						label="MOD_SPORTSMANAGEMENT_EVENTSRANKING_SELECT_MATCH_LABEL"
						description="MOD_SPORTSMANAGEMENT_EVENTSRANKING_SELECT_MATCH_DESCR" />
				
