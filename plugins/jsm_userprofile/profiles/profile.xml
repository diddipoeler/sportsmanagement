<field name="access_from" type="calendar" default="" label="PLG_USER_JSMPROFILE_SERAIL_ACCESS_FROM" description="PLG_USER_JSMPROFILE_SERAIL_ACCESS_FROM_DESC" format="%d-%m-%Y" />
<field name="access_to" type="calendar" default="" label="PLG_USER_JSMPROFILE_SERAIL_ACCESS_TO" description="PLG_USER_JSMPROFILE_SERAIL_ACCESS_TO_DESC" format="%d-%m-%Y" />
	    
	    
    </fieldset>
