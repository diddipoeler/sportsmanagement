      label="PLG_USER_JSMPROFILE_SLIDER_LABEL"
	addfieldpath="/administrator/components/com_sportsmanagement/models/fields"      
	      >
      <field
        name="databaseaccess"
        type="radio" 
    default="0"
    class="radio btn-group btn-group-yesno"
			label="PLG_USER_JSMPROFILE_DATABASE_ACCESS_TITLE" 
      description="PLG_USER_JSMPROFILE_DATABASE_ACCESS_DESC">
