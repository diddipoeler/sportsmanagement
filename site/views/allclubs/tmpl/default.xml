                description="COM_SPORTSMANAGEMENT_FES_PARAM_DESC_SHOW_ADDRESS"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            
            <field
                name="zip_code"
                type="extensionradiobutton"
                default="1"
                layout="joomla.form.field.radio.switcher"
                label="COM_SPORTSMANAGEMENT_FES_PARAM_LABEL_SHOW_ZIP_CODE"
                description="COM_SPORTSMANAGEMENT_FES_PARAM_DESC_SHOW_ZIP_CODE"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            
            <field
                name="city"
                type="extensionradiobutton"
                default="1"
                layout="joomla.form.field.radio.switcher"
                label="COM_SPORTSMANAGEMENT_FES_PARAM_LABEL_SHOW_CITY"
                description="COM_SPORTSMANAGEMENT_FES_PARAM_DESC_SHOW_CITY"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            
            <field
                name="country"
                type="extensionradiobutton"
                default="1"
                layout="joomla.form.field.radio.switcher"
                label="COM_SPORTSMANAGEMENT_FES_PARAM_LABEL_SHOW_COUNTRY"
                description="COM_SPORTSMANAGEMENT_FES_PARAM_DESC_SHOW_COUNTRY">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

        </fieldset>

