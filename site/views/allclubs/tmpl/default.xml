                label="COM_SPORTSMANAGEMENT_FES_PARAM_LABEL_SHOW_PICTURE"
                description="COM_SPORTSMANAGEMENT_FES_PARAM_DESC_SHOW_PICTURE"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            
            <field name="website" type="radio" default="1"
                   layout="joomla.form.field.radio.switcher"
                   label="COM_SPORTSMANAGEMENT_FES_PARAM_LABEL_SHOW_WEBSITE"
                   description="COM_SPORTSMANAGEMENT_FES_PARAM_DESC_SHOW_WEBSITE">
