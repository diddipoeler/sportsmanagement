        <fieldset
            name="request"
            label="COM_SPORTSMANAGEMENT_XML_BASIC_FIELDSET_LABEL"
        >
            
            <field 
                type="extensionversion" 
                version="1.1.0" 
            />
            
            <field
                type="extensionauthor" 
            />
            
            <field
                type="extensiontranslators"
                translators="COM_SPORTSMANAGEMENT_TRANSLATORS"
            />
            
            <field 
