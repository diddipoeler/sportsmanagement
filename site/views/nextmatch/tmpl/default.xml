<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_SPORTSMANAGEMENT_XML_NEXTMATCH_LAYOUT_TITLE">
        <message>
            <![CDATA[COM_SPORTSMANAGEMENT_XML_NEXTMATCH_LAYOUT_DESCR]]>
        </message>
    </layout>
    <fields name="request"
            addfieldpath="/administrator/components/com_sportsmanagement/models/fields">
        <fieldset name="request"
                  label="COM_SPORTSMANAGEMENT_XML_BASIC_FIELDSET_LABEL"
        >
            <field name="cfg_which_database"
                   type="extensionradiobutton"
                   default="0"
                   class="radio btn-group btn-group-yesno"
                   label="COM_SPORTSMANAGEMENT_SETTINGS_USE_JOOMLA_DATABASE_TITLE"
                   description="COM_SPORTSMANAGEMENT_SETTINGS_USE_JOOMLA_DATABASE_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>


            <field name="s"
                   task="seasons"
                   type="dependsql"
                   depends="cfg_which_database"
                   value_field="cfg_which_database"
                   key_field="season_id"
                   label="COM_SPORTSMANAGEMENT_XML_SELECT_SEASON_LABEL"
                   description="COM_SPORTSMANAGEMENT_XML_SELECT_SEASON_DESCR"
                   required="">
            </field>

            <field name="p"
                   task="projects"
                   type="dependsql"
                   depends="s"
                   key_field="season_id"
                   value_field="s"
                   label="COM_SPORTSMANAGEMENT_XML_SELECT_PROJECT_LABEL"
                   description="COM_SPORTSMANAGEMENT_XML_SELECT_PROJECT_DESCR"
                   required="">
            </field>

            <field name="ptid"
                   type="dependsql"
                   depends="p"
                   key_field="project_id"
                   value_field="p"
                   task="projectteamoptions"
                   label="COM_SPORTSMANAGEMENT_XML_NEXTMATCH_SELECT_TEAM_LABEL"
                   description="COM_SPORTSMANAGEMENT_XML_NEXTMATCH_SELECT_TEAM_DESCR"
                   required="false">
            </field>


            <field name="mid"
                   type="dependsql"
                   depends="p"
                   key_field="project_id"
                   value_field="p"
                   task="matchesoptions"
                   label="COM_SPORTSMANAGEMENT_XML_NEXTMATCH_SELECT_MATCH_LABEL"
                   description="COM_SPORTSMANAGEMENTXML_NEXTMATCH_SELECT_MATCH_DESCR"
                   required="false">
            </field>

        </fieldset>
    </fields>
</metadata>
